  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "BleBox"
  },
  "description": {
    "en": "Adds support for BleBox devices."
  },
  "dependencies": {
		"net": "*"
	},
  "category": [
    "appliances"
  ],
  "capabilities": {
    "measure_pm1": {
      "type": "number",
      "title": {
        "en": "PM1.0",
        "nl": "PM1.0",
        "de": "PM1.0"
      },
      "units": {
        "en": "ppm"
      },
      "insights": true,
      "icon": "/assets/measure_pm1.svg",
      "desc": {
        "en": "Atmospheric Particulate Matter PM1.0 (μg/m3)",
        "nl": "Deeltjesvormige luchtverontreiniging PM1.0 (μg/m3)",
        "de": "Atmosphärischer Feinstaub PM1.0 (μg/m3)"
      },
      "chartType": "spline",
      "decimals": 2,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "$flow": {
        "triggers": [
          {
            "id": "measure_pm1_changed",
            "title": {
              "en": "The PM1.0 value has changed",
              "nl": "De PM1.0 waarde is veranderd",
              "de": "Der PM1.0-Wert hat sich geändert"
            },
            "tokens": [
              {
                "name": "measure_pm1",
                "title": {
                  "en": "PM1.0",
                  "nl": "PM1.0",
                  "de": "PM1.0"
                },
                "type": "number",
                "example": 2
              }
            ]
          }
        ]
      }
    },
    "measure_pm10": {
      "type": "number",
      "title": {
        "en": "PM10",
        "nl": "PM10",
        "de": "PM10"
      },
      "units": {
        "en": "ppm"
      },
